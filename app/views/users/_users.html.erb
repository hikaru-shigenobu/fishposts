<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <a href="#">
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        </a>
        <div class="media-body">
          <div class="row">
            <div class="col-6">
              <%= user.name %>
              <p><%= link_to 'View profile', user_path(user) %></p>
            </div>
            <div class="col-4">
              <%= render 'relationships/follow_button', user: user %>
            <div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>